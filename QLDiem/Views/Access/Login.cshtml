@model TblUser
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/login.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="../img/picwish.png" type="image/icon type">
    <title>Đăng nhập</title>
</head>
<body>
    <div class="wrapper">
        <div class="title-text">
            <div class="title login">Đăng nhập</div>
        </div>
        <div class="form-container">
            <div class="form-inner">
@*                 <form action="#" class="login">
 *@                   
                    @using(Html.BeginForm("Login","Access",FormMethod.Post)){
                     <div class="field">
                        @Html.TextBoxFor(x=>x.TaiKhoan,new{@id="username-login", type="text", placeholder="Tên đăng nhập", 
                        required="required",autofocus="autofocus"})
                       @*  <input id="username-login" type="text" placeholder="Tên đăng nhập" required> *@
                    </div>
                    <div class="field">
                        @Html.TextBoxFor(x=>x.MatKhau,new{@id="password-login", type="password", placeholder="Mật khẩu"})
@*                         <input id="password-login" type="password" placeholder="Mật khẩu" required>
 *@                  </div>
                    <div class="pass-link"><a href="#">Quên mật khẩu?</a></div>
                    <div class="field btn">
                        <div class="btn-layer"></div>
                        <input type="submit" value="Đăng nhập">
                    </div>
                    }
@*                 </form>
 *@              
            </div>
        </div>
    </div>
@*     <script src="~/js/login.js"></script>
 *@</body>
</html>